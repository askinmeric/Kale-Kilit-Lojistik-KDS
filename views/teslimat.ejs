<!DOCTYPE html>
<html lang="tr" data-bs-theme="dark">
<head>
    <meta charset="UTF-8"><title>Teslimat Performansı | Kale Kilit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root { --kale-red: #DC143C; --bg-dark: #0a0a0a; --card-bg: #141414; }
        body { background-color: var(--bg-dark); font-family: 'Segoe UI', sans-serif; font-size: 14px; color: #eee; overflow-x: hidden; }
        .sidebar { width: 250px; height: 100vh; position: fixed; background: #000; border-right: 1px solid #222; z-index: 1000; }
        .main-content { margin-left: 250px; padding: 2rem; }
        .nav-link { color: #aaa !important; padding: 12px 20px; display: flex; align-items: center; text-decoration: none; border-left: 4px solid transparent; font-size: 0.9rem !important; }
        .nav-link.active { color: #fff !important; background: rgba(220, 20, 60, 0.1); border-left-color: var(--kale-red); }
        .chart-card { background: var(--card-bg); border-radius: 12px; padding: 1.5rem; border: 1px solid #222; margin-bottom: 2rem; }
        .sim-box { background: rgba(0, 212, 255, 0.05); border: 1px solid rgba(0, 212, 255, 0.2); border-radius: 12px; padding: 1.5rem; display: none; }
        .btn-simule { background: #0d6efd; border: none; padding: 10px 20px; font-weight: bold; border-radius: 6px; }
        .uzmanlik-metni { color: #00d4ff; font-weight: 500; font-size: 0.9rem; }
    </style>
</head>
<body>

<div class="sidebar">
    <div class="p-4 text-center"><h5 class="fw-bold text-white mb-0">KALE KİLİT</h5><small class="text-danger">TESLİMAT KDS</small></div>
    <nav class="nav flex-column mt-3">
        <a class="nav-link" href="/"><i class="bi bi-speedometer2 me-2"></i> Ana Sayfa</a>
        <a class="nav-link" href="/maliyet-trendi"><i class="bi bi-truck me-2"></i> Taşıma Maliyet Trendi</a>
        <a class="nav-link" href="/depo-kapasite"><i class="bi bi-box-seam me-2"></i> Depo Kapasite Durumu</a>
        <a class="nav-link" href="/tedarikci-analizi"><i class="bi bi-people me-2"></i> Tedarikçi Performans Analizi</a>
        <a class="nav-link active" href="/teslimat-performansi"><i class="bi bi-clock-history me-2"></i> Teslimat Performansı</a>
        <a class="nav-link" href="/sezonluk-is-yuku"><i class="bi bi-bar-chart-steps me-2"></i> Sezonluk İş Yükü</a>
    </nav>
</div>

<div class="main-content">
    <div class="chart-card">
        <h6 class="fw-bold mb-4 text-uppercase opacity-75 small"><i class="bi bi-geo-alt-fill text-info me-2"></i> Gelecek Dönem Rota Atama Simülatörü</h6>
        <div class="row align-items-center">
            <div class="col-md-5">
                <label class="small opacity-50 mb-2">Bölge Seçin</label>
                <select id="bSec" class="form-select bg-dark text-white border-secondary mb-3">
                    <option value="Ege">Ege Bölgesi</option>
                    <option value="Marmara">Marmara Bölgesi</option>
                    <option value="IcAnadolu">İç Anadolu Bölgesi</option>
                </select>
                <button onclick="calistir()" class="btn btn-simule w-100 text-white">SİMÜLE ET</button>
            </div>
            <div class="col-md-7">
                <div id="resPanel" class="sim-box">
                    <div class="d-flex justify-content-between">
                        <div><small class="text-info">ÖNERİLEN PERSONEL</small><h4 id="rAd" class="fw-bold">---</h4></div>
                        <div class="text-end"><small class="text-success">BAŞARI</small><h4 id="rPuan" class="fw-bold text-success">%0</h4></div>
                    </div>
                    <p class="mb-0 mt-2 small"><b class="text-info">Stratejik Not:</b> <span id="rNot">---</span></p>
                </div>
            </div>
        </div>
    </div>

    <div class="chart-card">
        <h6 class="fw-bold mb-4 text-uppercase opacity-75 small"><i class="bi bi-people-fill text-danger me-2"></i> Lojistik Ekibi Performans Karnesi (Tekil Liste)</h6>
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle">
                <thead>
                    <tr class="text-secondary border-secondary">
                        <th>AD SOYAD</th>
                        <th>UZMANLIK BÖLGELERİ</th>
                        <th style="width: 35%;">GENEL BAŞARI ORANI</th>
                    </tr>
                </thead>
                <tbody id="pTablo"></tbody>
            </table>
        </div>
    </div>
</div>

<script>
    async function init() {
        const res = await fetch('/api/dashboard/all-stats');
        const data = await res.json();

        // Her personeli tek sefer yazar, bölgelerini birleştirir
        document.getElementById('pTablo').innerHTML = data.personelKarnesi.map(p => `
            <tr>
                <td class="fw-bold py-3 text-white">${p.ad_soyad}</td>
                <td class="uzmanlik-metni">${p.bolge}</td>
                <td>
                    <div class="d-flex align-items-center gap-3">
                        <div class="progress flex-grow-1" style="height: 8px; background: #222;">
                            <div class="progress-bar ${p.basari_orani >= 90 ? 'bg-success' : 'bg-warning'}" style="width: ${p.basari_orani}%"></div>
                        </div>
                        <span class="fw-bold text-white">%${p.basari_orani}</span>
                    </div>
                </td>
            </tr>
        `).join('');
    }

    function calistir() {
        const b = document.getElementById('bSec').value;
        const p = document.getElementById('resPanel');
        p.style.display = 'block';
        
        const data = {
            'Ege': { ad: 'Ahmet Kaya', puan: '%100', not: 'Ege rotasında tüm zamanların en yüksek teslimat puanına sahiptir.' },
            'Marmara': { ad: 'Mustafa Yılmaz', puan: '%88', not: 'Yoğun trafikli Marmara bölgesinde en hızlı teslimat yapan personeldir.' },
            'IcAnadolu': { ad: 'Rıza Can', puan: '%100', not: 'İç Anadolu sevkiyatlarında %0 şikayet oranı ile çalışmaktadır.' }
        };

        const s = data[b];
        document.getElementById('rAd').innerText = s.ad;
        document.getElementById('rPuan').innerText = s.puan;
        document.getElementById('rNot').innerText = s.not;
    }

    window.onload = init;
</script>
</body>
</html>