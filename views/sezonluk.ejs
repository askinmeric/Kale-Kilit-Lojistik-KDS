<script>
    function toggleSidebar() { document.getElementById('sidebar').classList.toggle('show'); }
    async function fetchData(islem, start = null, end = null) {
        let url = `/data.php?islem=${islem}`;
        if(start) url += `&start=${start}`;
        if(end) url += `&end=${end}`;
        const response = await fetch(url);
        return await response.json();
    }
    const KALE_COLORS = {
        kirmizi: '#DC143C', kirmiziDark: '#B01030', kirmiziLight: 'rgba(220, 20, 60, 0.3)',
        siyah: '#000000', beyaz: '#FFFFFF', griDark: '#1a1a1a', griMedium: '#2d2d2d',
        griLight: '#404040', griText: '#cccccc', success: '#28a745', warning: '#ffc107',
        danger: '#dc3545', info: '#17a2b8'
    };
    Chart.defaults.color = KALE_COLORS.griText;
    Chart.defaults.borderColor = KALE_COLORS.griLight;
    let chartSezonlukVar;
    async function loadSeason(start, end) {
        const data = await fetchData('sezonluk', start + '-01', end + '-31');
        const ctx = document.getElementById('chartSezonluk').getContext('2d');
        if(chartSezonlukVar) chartSezonlukVar.destroy();
        chartSezonlukVar = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: data.map(d => d.AyIsmi),
                datasets: [{
                    label: 'ƒ∞≈ü Y√ºk√º',
                    data: data.map(d => d.IsYuku),
                    backgroundColor: KALE_COLORS.kirmizi,
                    borderColor: KALE_COLORS.kirmiziDark,
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { ticks: { color: KALE_COLORS.griText }, grid: { color: KALE_COLORS.griLight } },
                    y: { ticks: { color: KALE_COLORS.griText }, grid: { color: KALE_COLORS.griLight } }
                },
                plugins: {
                    legend: { labels: { color: KALE_COLORS.griText } }
                }
            }
        });
    }
    loadSeason('2024-01', '2025-12');
    function updateSeason() { loadSeason(document.getElementById('seasonStart').value, document.getElementById('seasonEnd').value); }
</script>
