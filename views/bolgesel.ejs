<script>
    function toggleSidebar() { document.getElementById('sidebar').classList.toggle('show'); }
    async function fetchData(islem, start = null, end = null) {
        let url = `/data.php?islem=${islem}`;
        if(start) url += `&start=${start}`;
        if(end) url += `&end=${end}`;
        const response = await fetch(url);
        return await response.json();
    }
    const KALE_COLORS = {
        kirmizi: '#DC143C', kirmiziDark: '#B01030', kirmiziLight: 'rgba(220, 20, 60, 0.3)',
        siyah: '#000000', beyaz: '#FFFFFF', griDark: '#1a1a1a', griMedium: '#2d2d2d',
        griLight: '#404040', griText: '#cccccc', success: '#28a745', warning: '#ffc107',
        danger: '#dc3545', info: '#17a2b8'
    };
    Chart.defaults.color = KALE_COLORS.griText;
    Chart.defaults.borderColor = KALE_COLORS.griLight;
    let chartBolgeselVar;
    async function loadMap(start, end) {
        const data = await fetchData('bolgesel', start, end);
        const ctx = document.getElementById('chartBolgesel').getContext('2d');
        const coords = { 
            'ƒ∞stanbul': {x: 28, y: 15}, 'Ankara': {x: 50, y: 35}, 'ƒ∞zmir': {x: 20, y: 50}, 
            'Bursa': {x: 30, y: 25}, 'Antalya': {x: 35, y: 70}, 'Adana': {x: 65, y: 68},
            'Erzurum': {x: 85, y: 25}, 'Diyarbakƒ±r': {x: 80, y: 55}, 'Gaziantep': {x: 68, y: 60},
            'Samsun': {x: 62, y: 12}, 'Trabzon': {x: 75, y: 15}, 'Kayseri': {x: 58, y: 45},
            'Eski≈üehir': {x: 40, y: 30}, 'Konya': {x: 45, y: 55}, 'Mersin': {x: 60, y: 72},
            'Denizli': {x: 30, y: 55}, 'Muƒüla': {x: 25, y: 65}, 'Balƒ±kesir': {x: 25, y: 30},
            'Tekirdaƒü': {x: 25, y: 18}, 'Kocaeli': {x: 32, y: 20}, 'Sakarya': {x: 35, y: 22}
        };
        if(chartBolgeselVar) chartBolgeselVar.destroy();
        const maxSevkiyat = Math.max(...data.map(d => d.SevkiyatSayisi), 1);
        chartBolgeselVar = new Chart(ctx, {
            type: 'bubble',
            data: {
                datasets: [{
                    label: 'Sevkiyat',
                    data: data.map(d => {
                        const coord = coords[d.VarisSehri] || {x: 50, y: 50};
                        return {
                            x: coord.x,
                            y: coord.y,
                            r: Math.max(8, Math.min(30, (d.SevkiyatSayisi / maxSevkiyat) * 25 + 8)),
                            sehir: d.VarisSehri,
                            adet: d.SevkiyatSayisi
                        };
                    }),
                    backgroundColor: KALE_COLORS.kirmiziLight,
                    borderColor: KALE_COLORS.kirmizi,
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    x: { display: false, min: 0, max: 100 },
                    y: { display: false, min: 0, max: 100, reverse: true }
                },
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: KALE_COLORS.griDark,
                        titleColor: KALE_COLORS.beyaz,
                        bodyColor: KALE_COLORS.griText,
                        borderColor: KALE_COLORS.kirmizi,
                        borderWidth: 1,
                        callbacks: {
                            label: ctx => `${ctx.raw.sehir}: ${ctx.raw.adet} Sevkiyat`
                        }
                    }
                }
            }
        });
    }
    loadMap('2024-01-01', '2025-12-31');
    function updateMap() { loadMap(document.getElementById('mapStart').value, document.getElementById('mapEnd').value); }
</script>
